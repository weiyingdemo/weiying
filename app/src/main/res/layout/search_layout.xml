<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y51"
    android:background="#F54337">

    <EditText
        android:id="@+id/search_edit"
        android:layout_width="@dimen/x220"
        android:layout_height="@dimen/y31"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:background="@drawable/shape"
        android:hint="请输入您喜欢的电影"
        android:textColor="#ffff"
        android:textSize="@dimen/y12" />

    <TextView
        android:id="@+id/search_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/search_edit"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:text="取消"
        android:textSize="@dimen/x14" />

    <TextView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/search_edit"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:text="搜索"
        android:textSize="@dimen/x14"
        android:visibility="gone" />

</RelativeLayout>

