<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <ImageView
        android:id="@+id/speciallist_imgview"
        android:layout_width="@dimen/x75"
        android:layout_height="@dimen/y75"
        android:src="@mipmap/ic_launcher"
        android:background="@drawable/bg_border1"
        android:padding="@dimen/y3"
        />

    <TextView
        android:id="@+id/speciallist_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="生化危机"
        android:textSize="@dimen/y8"
        android:padding="@dimen/y3"
        />

</LinearLayout>
