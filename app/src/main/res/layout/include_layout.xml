<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y51"
    android:background="#F54337"
   >

    <ImageView
        android:id="@+id/inclu_back"
        android:layout_width="@dimen/x10"
        android:layout_height="@dimen/y10"
        android:layout_alignBottom="@+id/inclu_titles"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:visibility="invisible"
        android:src="@mipmap/back" />

    <TextView
        android:id="@+id/inclu_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="25dp"
        android:text="删除"
        android:visibility="invisible"
        android:textSize="@dimen/x14" />

    <TextView
        android:id="@+id/inclu_titles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/inclu_delete"
        android:layout_centerHorizontal="true"
        android:text="精选"
        android:textSize="@dimen/x14" />
</RelativeLayout>

