<?xml version="1.0" encoding="utf-8"?>
<com.example.weiying.ResideLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.MainActivity">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f00"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/main_sdv"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y60"
            android:layout_marginLeft="@dimen/x18"
            android:layout_marginTop="@dimen/y42"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/main_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x27"
            android:layout_marginTop="@dimen/y14"
            android:textSize="@dimen/y12" />

        <LinearLayout
            android:id="@+id/linear_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x27"
            android:layout_marginTop="@dimen/y14"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_width="@dimen/x13"
                android:layout_height="@dimen/y13"
                android:src="@mipmap/mycollection"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:text="我的收藏"
                android:textSize="@dimen/y12" />
        </LinearLayout>
        <LinearLayout
        android:id="@+id/linear_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x27"
        android:layout_marginTop="@dimen/y14"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="2dp"
            android:layout_width="@dimen/x13"
            android:layout_height="@dimen/y13"
            android:src="@mipmap/download"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x8"
            android:text="我的下载"
            android:textSize="@dimen/y12" />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_welfare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x27"
            android:layout_marginTop="@dimen/y14"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_width="@dimen/x13"
                android:layout_height="@dimen/y13"
                android:src="@mipmap/welfare"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:text="福利"
                android:textSize="@dimen/y12" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x27"
            android:layout_marginTop="@dimen/y14"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_width="@dimen/x13"
                android:layout_height="@dimen/y13"
                android:src="@mipmap/share"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:text="分享"
                android:textSize="@dimen/y12" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_suggest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x27"
            android:layout_marginTop="@dimen/y14"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_width="@dimen/x13"
                android:layout_height="@dimen/y13"
                android:src="@mipmap/suggest"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:text="建议反馈"
                android:textSize="@dimen/y12" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x27"
            android:layout_marginTop="@dimen/y14"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_width="@dimen/x13"
                android:layout_height="@dimen/y13"
                android:src="@mipmap/setting"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:text="设置"
                android:textSize="@dimen/y12" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/y200"
            android:id="@+id/linear_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x27"

            android:orientation="horizontal">

            <ImageView
            android:layout_marginTop="2dp"
            android:layout_width="@dimen/x13"
            android:layout_height="@dimen/y13"
            android:src="@mipmap/about"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:text="关于"
                android:textSize="@dimen/y12" />

            <LinearLayout

                android:id="@+id/linear_theme"
                android:layout_marginLeft="@dimen/x30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_width="@dimen/x13"
                android:layout_height="@dimen/y13"
                android:src="@mipmap/theme"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:text="主题"
                android:textSize="@dimen/y12" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_colorful">

        <include layout="@layout/include_layout" />

        <com.hjm.bottomtabbar.BottomTabBar
            android:id="@+id/main_btb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.hjm.bottomtabbar.BottomTabBar>
    </RelativeLayout>
</com.example.weiying.ResideLayout>